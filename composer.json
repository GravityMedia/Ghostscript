{
    "name": "gravitymedia/ghostscript",
    "description": "Ghostscript is an object oriented Ghostscript binary wrapper for PHP.",
    "keywords": [
        "gravitymedia",
        "ghostscript"
    ],
    "homepage": "https://github.com/GravityMedia/Ghostscript",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel SchrÃ¶der",
            "email": "daniel.schroeder@gravitymedia.de",
            "homepage": "https://github.com/pCoLaSD",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/process": "^3.4|^4.1|^5.0"
    },
    "require-dev": {
        "phing/phing": "^2.14",
        "phpunit/phpunit": "^9.5",
        "scrutinizer/ocular": "^1.3",
        "symfony/finder": "^4.1",
        "sebastian/comparator": ">=1.2.3"
    },
    "autoload": {
        "psr-4": {
            "GravityMedia\\Ghostscript\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GravityMedia\\GhostscriptTest\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phing test",
        "doc": "php vendor/bin/phing doc"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "archive": {
        "exclude": [
            "/.*",
            "/*.php",
            "/build.*",
            "/composer.*",
            "/phpunit.*",
            "/tests"
        ]
    }
}
