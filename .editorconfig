# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings
[*]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown file settings
[*.md]
trim_trailing_whitespace = false

# YAML file settings
[*.yaml]
indent_size = 2
